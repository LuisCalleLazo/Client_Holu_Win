<Page x:Class="Client_Holu_Win.src.Presentation.Pages.MainGame.GamesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client_Holu_Win.src.Presentation.Pages.MainGame"
      xmlns:controllers="clr-namespace:Client_Holu_Win.src.Presentation.Controllers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GamesPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <controllers:TitleControl Text="Juegos disponibles"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>
        </Grid>
        
        <Grid Grid.Row="1">
            <TextBlock x:Name="PacketInfoTextBlock" 
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Left" 
                   Margin="10 40 10 10" 
                   TextWrapping="Wrap" 
                   Width="600" 
                   Foreground="Wheat"
                   Height="400"/>
        </Grid>
    </Grid>
</Page>

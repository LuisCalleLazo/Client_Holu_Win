<Window x:Class="Client_Holu_Win.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client_Holu_Win"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Lista de partidas -->
        <ListBox x:Name="GameList" Grid.Row="0" Grid.Column="0" Margin="5" 
                 DisplayMemberPath="Name" />

        <!-- Controles -->
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" Margin="5">
            <TextBox x:Name="GameNameTextBox" Width="200" Margin="0,5,0,5" />
            <Button x:Name="CreateButton" Content="Create Game" Width="200" Margin="0,5,0,5" 
                    Click="CreateButton_Click"/>
            <Button x:Name="JoinButton" Content="Join Game" Width="200" Margin="0,5,0,5" 
                    Click="JoinButton_Click"/>
            <Button x:Name="DeleteButton" Content="Delete Game" Width="200" Margin="0,5,0,5" 
                    Click="DeleteButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

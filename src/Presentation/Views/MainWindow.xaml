<Window x:Class="Client_Holu_Win.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client_Holu_Win"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowState="Maximized">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Panel de Navegación -->
        <StackPanel Background="#2D2D30" Grid.Column="0" VerticalAlignment="Stretch" Grid.RowSpan="2">
            <TextBlock Text="HOLU" Foreground="White" FontSize="20" FontWeight="Bold" 
                       Margin="0 40" HorizontalAlignment="Center"/>
            <Button Content="Lista de Partidas" Width="250" Height="40" 
                    HorizontalAlignment="Center" Click="NavGamesPage"/>
            <Button Content="Estadisticas" Width="250" Height="40" 
                    HorizontalAlignment="Center" Click="NavStatisticsPage"/>
            <Button Content="Historial" Width="250" Height="40" 
                    HorizontalAlignment="Center" Click="NavHistoryPage"/>
            <Button Content="Perfil" Width="250" Height="40" 
                    HorizontalAlignment="Center" Click="NavProfilePage"/>
            <Button Content="Foros" Width="250" Height="40" 
                    HorizontalAlignment="Center" Click="NavForumsPage"/>
        </StackPanel>

        <!-- Contenido Principal -->
        <Grid Grid.Column="1" Grid.RowSpan="2">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
